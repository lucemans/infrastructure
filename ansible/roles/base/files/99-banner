#!/bin/sh
export TERM=xterm-256color
f="$(tput setaf 5)"
a="$(tput setaf 4)"


g="$(tput setaf 3)"
r="$(tput setaf 2)"
b="$(tput setaf 1)"

echo "${a}
 __             __                      __        
|  \           |  \                    |  \       
| ${f}##${a} __     __ | ${f}##${a}   __       _______ | ${f}##${a}____   
| ${f}##${a}|  \   /  \| ${f}##${a}  /  \     /       \| ${f}##${a}    \  
| ${f}##${a} \\${f}##${a}\ /  ${f}##${a}| ${f}##${a}_/  ${f}##${a}    |  ${f}#######${a}| ${f}#######${a}\ 
| ${f}##${a}  \\${f}##${a}\  ${f}##${a} | ${f}##${a}   ${f}##${a}      \\${f}##${a}    \ | ${f}##${a}  | ${f}##${a} 
| ${f}##${a}   \\${f}## ##${a}  | ${f}######${a}\  __  _\\${f}######${a}\| ${f}##${a}  | ${f}##${a} 
| ${f}##${a}    \\${f}###${a}   | ${f}##${a}  \\${f}##${a}\|  \|       ${f}##${a}| ${f}##${a}  | ${f}##${a} 
 \\${f}##${a}     \\${f}#${a}     \\${f}##${a}   \\${f}##${a} \\${f}##${a} \\${f}#######${a}  \\${f}##${a}   \\${f}##${a} 


${g}=================== ${r}❮ ${b}$(hostname) ${r}❯ ${g}===================
$(tput sgr0)
"